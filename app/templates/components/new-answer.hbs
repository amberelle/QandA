{{#if addNewAnswer}}
<h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group" >
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="response">Response</label>
          {{input value=response id="response"}}
        </div>

        <button {{action 'saveAnswer1'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'answerFormShow'}}>New answer</button>
{{/if}}
