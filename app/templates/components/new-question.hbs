{{#if addNewquestion}}
<h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="ask">Ask</label>
          {{input value=ask id="ask"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'questionFormShow'}}>New question</button>
{{/if}}
